<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="kinzangilar.systems.munzangilar.org.myapplication.HomeFragment">


    <TextView
        android:id="@+id/tv_salutation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="string/salutation"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_promoCodeText"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_salutation"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="string/promoCodeText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_promoCode"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_promoCodeText"
        android:gravity="center"
        android:hint="string/promoCode"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_generatePromoCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_promoCode"
        android:layout_marginTop="14dp"
        android:background="?attr/textColorError"
        android:text="string/generatePromoCodeTxt"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/tv_tryYourCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:autoLink="all"
        android:gravity="center"
        android:text="string/tryYourCodeText"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:visibility="visible" />
</RelativeLayout>
